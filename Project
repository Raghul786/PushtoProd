#!/bin/bash

# This is a sample test script. Replace it with your actual tests

echo "Running sample tests..."

# Simulate some tests
exit_code=0
for (( i=1; i<=5; i++ )); do
  # Simulate a test with a random chance of failure (20%)
  if [[ $(($RANDOM % 5)) -eq 0 ]]; then
    echo "Test $i failed!"
    exit_code=1
  else
    echo "Test $i passed."
  fi
done

exit $exit_code
